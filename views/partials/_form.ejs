<form action="/api/customer" method="POST" id="add_customer">
    <div class="new_customer">
        <div class="form-group">
            <label for="name" class="text-light">Customer Name:</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Customer Name">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Customer Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="Photo" class="text-light">Photo of Receipt</label>
            <input type="text" name="email" value="" placeholder="">
        </div>

        <div class="form-group">
            <label for="coverage" class="text-light">Date</label>
            <input type="text" name="coverage" value="" placeholder="01/07/2023">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>